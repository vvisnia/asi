<%= form_for @note, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reason, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :reason, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :content, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  notes_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
